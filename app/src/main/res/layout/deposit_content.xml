<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="wallit_app.activity.DepositActivity"
    tools:showIn="@layout/deposit_main">

    <ImageView
        android:id="@+id/wallit_logo"
        android:layout_width="0dp"
        android:layout_height="97dp"
        android:layout_marginStart="64dp"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="64dp"
        android:layout_marginRight="64dp"
        android:adjustViewBounds="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_original" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wallit_logo">

        <ImageView
            android:id="@+id/wallit_icon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/current_balance"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_wallit_icon_operation" />

        <ImageView
            android:id="@+id/euro_icon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="64dp"
            app:layout_constraintBottom_toTopOf="@+id/deposit_button_animation"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/deposit_value"
            app:layout_constraintTop_toBottomOf="@+id/current_balance"
            app:srcCompat="@drawable/ic_euro_operation" />

        <EditText
            android:id="@+id/current_balance"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginStart="32dp"
            android:autofillHints=""
            android:background="@drawable/input_data_field_left"
            android:ems="10"
            android:gravity="end"
            android:inputType="none"
            android:padding="10dp"
            android:textAllCaps="false"
            app:layout_constraintEnd_toStartOf="@+id/wallit_icon"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="5.153,20" />

        <EditText
            android:id="@+id/deposit_value"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="64dp"
            android:background="@drawable/input_data_field_left"
            android:ems="10"
            android:gravity="end"
            android:hint="Value to deposit"
            android:inputType="numberDecimal"
            android:padding="10dp"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:textAllCaps="false"
            app:layout_constraintBottom_toTopOf="@+id/deposit_button_animation"
            app:layout_constraintEnd_toStartOf="@+id/euro_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/current_balance" />

        <Button
            android:id="@+id/deposit_button"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="180dp"
            android:layout_height="200dp"
            android:layout_marginBottom="64dp"
            android:background="@drawable/operation_depositbutton"
            android:onClick="buttonSendDepositData"
            android:textSize="36sp"
            android:typeface="normal"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/deposit_button_animation"
            android:layout_width="180dp"
            android:layout_height="200dp"
            android:layout_marginBottom="64dp"
            android:src="@drawable/deposit_button_loading_animation"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>