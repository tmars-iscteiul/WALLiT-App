<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".StatsActivity"
    tools:showIn="@layout/stats_main">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:text="Movement History"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/movement_history_table"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:id="@+id/movement_history_table"
        android:layout_width="344dp"
        android:layout_height="205dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5">

        <TableRow
            android:id="@+id/HeaderRow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left">

            <TextView
                android:id="@+id/header_date"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/table_header_shape"
                android:padding="5dp"
                android:text="Date"
                android:textColor="@color/colorAccent"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/header_type"
                android:layout_width="52dp"
                android:layout_height="match_parent"
                android:background="@drawable/table_header_shape"
                android:gravity="center"
                android:padding="5dp"
                android:text="Type"
                android:textColor="@color/colorAccent"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/header_debit2"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:background="@drawable/table_header_shape"
                android:gravity="center"
                android:padding="5dp"
                android:text="Amount"
                android:textColor="@color/colorAccent"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/header_credit"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:background="@drawable/table_header_shape"
                android:gravity="center"
                android:padding="5dp"
                android:text="Balance"
                android:textColor="@color/colorAccent"
                android:textSize="18sp"
                android:textStyle="bold" />

        </TableRow>

        <TableRow
            android:id="@+id/DepositRow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/table_cell_shape_deposit"
            android:gravity="left">

            <TextView
                android:id="@+id/deposit_date"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="2019-02-21"
                android:textColor="@color/colorBackground"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/deposit_type"
                android:layout_width="52dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Dep."
                android:textColor="@color/colorBackground"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/deposit_amount"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="150,00 €"
                android:textColor="@color/colorBackground"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/deposit_balance"
                android:layout_width="94dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="5.672,17 € "
                android:textColor="@color/colorBackground"
                android:textSize="14sp"
                android:textStyle="bold" />

        </TableRow>

        <TableRow
            android:id="@+id/WithdrawRow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/table_cell_shape_withdraw"
            android:gravity="left">

            <TextView
                android:id="@+id/withdraw_date"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="2019-01-14"
                android:textColor="@color/colorAccent"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/withdraw_type"
                android:layout_width="52dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Wit."
                android:textColor="@color/colorAccent"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/withdraw_amout"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="80,00 €"
                android:textColor="@color/colorAccent"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/withdraw_balance"
                android:layout_width="94dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="5.492,56 € "
                android:textColor="@color/colorAccent"
                android:textSize="14sp"
                android:textStyle="bold" />

        </TableRow>

        <TableRow
            android:id="@+id/DepositRow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/table_cell_shape_deposit"
            android:gravity="left"
            tools:layout_editor_absoluteX="34dp"
            tools:layout_editor_absoluteY="90dp">

            <TextView
                android:id="@+id/deposit_date"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="2018-12-02"
                android:textColor="@color/colorBackground"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/deposit_type"
                android:layout_width="52dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Dep."
                android:textColor="@color/colorBackground"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/deposit_amount"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="100,00 €"
                android:textColor="@color/colorBackground"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/deposit_balance"
                android:layout_width="94dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="5.558,16 € "
                android:textColor="@color/colorBackground"
                android:textSize="14sp"
                android:textStyle="bold" />

        </TableRow>

        <TableRow
            android:id="@+id/DepositRow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/table_cell_shape_deposit"
            android:gravity="left"
            tools:layout_editor_absoluteX="34dp"
            tools:layout_editor_absoluteY="90dp">

            <TextView
                android:id="@+id/deposit_date"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="2018-10-12"
                android:textColor="@color/colorBackground"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/deposit_type"
                android:layout_width="52dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Dep."
                android:textColor="@color/colorBackground"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/deposit_amount"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="120,00 €"
                android:textColor="@color/colorBackground"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/deposit_balance"
                android:layout_width="94dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="5.426,36 € "
                android:textColor="@color/colorBackground"
                android:textSize="14sp"
                android:textStyle="bold" />

        </TableRow>

        <TableRow
            android:id="@+id/WithdrawRow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/table_cell_shape_withdraw"
            android:gravity="left">

            <TextView
                android:id="@+id/withdraw_date"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="2018-08-21	"
                android:textColor="@color/colorAccent"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/withdraw_type"
                android:layout_width="52dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Wit."
                android:textColor="@color/colorAccent"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/withdraw_amout"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="50,00 €"
                android:textColor="@color/colorAccent"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/withdraw_balance"
                android:layout_width="94dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="5.398,27 € "
                android:textColor="@color/colorAccent"
                android:textSize="14sp"
                android:textStyle="bold" />

        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="left"
        android:text="General Statistics"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/movement_history_table" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="16dp"
        android:gravity="left"
        android:text="Current Amount:"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:gravity="right"
        android:text="614,98€"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="8dp"
        android:gravity="left"
        android:text="Earnings since last deposit:"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="34dp"
        android:layout_marginRight="34dp"
        android:gravity="right"
        android:text="-0,14€"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="8dp"
        android:gravity="left"
        android:text="All time earnings:"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="34dp"
        android:layout_marginRight="34dp"
        android:gravity="right"
        android:text="+15,12€"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

</android.support.constraint.ConstraintLayout>